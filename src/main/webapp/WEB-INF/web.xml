<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>Overlook</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.revature.servlets.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>sendNewProfileInfo</servlet-name>
    <servlet-class>com.revature.servlets.NewProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sendNewProfileInfo</servlet-name>
    <url-pattern>/sendNewProfileInfo</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>com.revature.servlets.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>*.filter</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>ProfileConnected</display-name>
    <servlet-name>ProfileConnected</servlet-name>
    <servlet-class>com.revature.servlets.ProfileConnectedServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfileConnected</servlet-name>
    <url-pattern>/ProfileConnected</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.revature.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DashboardServlet</display-name>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.revature.servlets.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/DashboardServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>GuestInquiry</servlet-name>
  	<servlet-class>com.revature.servlets.GuestInquiryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>GuestInquiry</servlet-name>
  	<url-pattern>/GuestInquiry</url-pattern>
  </servlet-mapping>
  
</web-app>